{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
      "@container": ["container/index"],
      "@container/*": ["container/*"]
    }
  },
  "exclude": ["temp", "coverage", "dist", "./*.js"]
}
