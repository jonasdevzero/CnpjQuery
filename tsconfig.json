{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "@data/*": ["data/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
      "@container": ["container/index"],
      "@container/*": ["container/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "jest**.ts", "**/*.spec.ts", "**/*.test.ts", "**/*.mock.ts"]
}
